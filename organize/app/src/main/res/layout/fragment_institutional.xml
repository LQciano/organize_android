<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/containerContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_default"
                android:textColor="@color/colorTextDefault"
                android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Light"
                />

            <TextView
                android:id="@+id/txtSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtDescription"
                android:text="@string/label_site"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorTextDefault"
                android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                />

            <RelativeLayout
                android:id="@+id/contentMission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtSite"
                android:layout_marginTop="@dimen/margin_large"
                >

                <RelativeLayout
                    android:id="@+id/btnMission"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_element_destak_rigth"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/label_mission"
                        android:textSize="@dimen/text_size_default"
                        android:textColor="@color/colorDestakText"
                        android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Bold"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtMission"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/btnMission"
                    android:paddingLeft="@dimen/padding_default"
                    android:paddingRight="@dimen/padding_default"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_default"
                    android:textColor="@color/colorTextDefault"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Light"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contentVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contentMission"
                android:layout_marginTop="@dimen/margin_small"
                >

                <RelativeLayout
                    android:id="@+id/btnVision"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_element_destak_rigth"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/label_vision"
                        android:textSize="@dimen/text_size_default"
                        android:textColor="@color/colorDestakText"
                        android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Bold"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtVision"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/btnVision"
                    android:paddingLeft="@dimen/padding_default"
                    android:paddingRight="@dimen/padding_default"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_default"
                    android:textColor="@color/colorTextDefault"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Light"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contentValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contentVision"
                android:layout_marginTop="@dimen/margin_small"
                >

                <RelativeLayout
                    android:id="@+id/btnValues"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_element_destak_rigth"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/label_values"
                        android:textSize="@dimen/text_size_default"
                        android:textColor="@color/colorDestakText"
                        android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Bold"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtValues"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/btnValues"
                    android:paddingLeft="@dimen/padding_default"
                    android:paddingRight="@dimen/padding_default"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_default"
                    android:textColor="@color/colorTextDefault"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Light"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtOurPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/contentValues"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/label_our_plans"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Bold"
                />

            <RelativeLayout
                android:id="@+id/contentPlanFree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtOurPlan"
                android:layout_marginTop="@dimen/margin_large"
                >

                <RelativeLayout
                    android:id="@+id/btnPlanFree"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_element_destak_left"
                    >

                    <TextView
                        android:id="@+id/txtFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/text_size_default"
                        android:textColor="@color/colorDestakText"
                        android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Bold"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtPlanFree"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/btnPlanFree"
                    android:paddingLeft="@dimen/padding_default"
                    android:paddingRight="@dimen/padding_default"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_default"
                    android:textColor="@color/colorTextDefault"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Light"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contentPlanBasic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contentPlanFree"
                android:layout_marginTop="@dimen/margin_large"
                >

                <RelativeLayout
                    android:id="@+id/btnPlanBasic"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_element_destak_left"
                    >

                    <TextView
                        android:id="@+id/txtBasic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/text_size_default"
                        android:textColor="@color/colorDestakText"
                        android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Bold"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtPlanBasic"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/btnPlanBasic"
                    android:paddingLeft="@dimen/padding_default"
                    android:paddingRight="@dimen/padding_default"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_default"
                    android:textColor="@color/colorTextDefault"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Light"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contentPlanPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contentPlanBasic"
                android:layout_marginTop="@dimen/margin_large"
                >

                <RelativeLayout
                    android:id="@+id/btnPlanPremium"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_element_destak_left"
                    >

                    <TextView
                        android:id="@+id/txtPremium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/text_size_default"
                        android:textColor="@color/colorDestakText"
                        android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Bold"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtPlanPremium"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/btnPlanPremium"
                    android:paddingLeft="@dimen/padding_default"
                    android:paddingRight="@dimen/padding_default"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_default"
                    android:textColor="@color/colorTextDefault"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Light"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/contentPlanPremium"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/label_contact"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Bold"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvListContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtContact"
                android:layout_marginTop="@dimen/margin_default"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>