<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.organize4event.organize.ui.activities.HomeActivity">

    <RelativeLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                tools:ignore="MissingPrefix"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:id="@+id/imgNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="22dp" android:src="@drawable/ic_notifications_black_24dp"
                    android:tint="@color/colorDestakText"
                    />

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/containerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appBarLayout"
            />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollNav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        >

        <LinearLayout
            android:id="@+id/userContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_navigate"
            >

            <RelativeLayout
                android:id="@+id/imgContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_gravity="center_horizontal"
                >

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/imgBorder"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_transparent"
                    app:siBorderColor="@color/colorWhite"
                    app:siBorderWidth="1dp"
                    app:siBorderAlpha="0.6"
                    />

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/imgUserAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/_logo"
                    app:siBorderColor="@color/colorTransparent"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/default_margin_top"
                android:lines="1"
                android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                android:text="@string/label_nav_user"
                android:textColor="@color/colorDestakText"
                />

            <LinearLayout
                android:id="@+id/homeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="horizontal"
                android:background="#10000000"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:tint="@color/colorDestakText"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:lines="1"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                    android:text="@string/label_nav_home"
                    android:textColor="@color/colorDestakText"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/eventContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#20000000"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:tint="@color/colorDestakText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:lines="1"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                    android:text="@string/label_nav_events"
                    android:textColor="@color/colorDestakText"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sheduleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#30000000"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:tint="#8f8f8f"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:lines="1"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                    android:text="@string/label_nav_shedule"
                    android:textColor="#8f8f8f"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/partnerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#40000000"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:tint="#8f8f8f"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:lines="1"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                    android:text="@string/label_nav_partners"
                    android:textColor="#8f8f8f"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/paymentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#50000000"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:tint="#a3a3a3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:lines="1"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                    android:text="@string/label_nav_payment"
                    android:textColor="#a3a3a3"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/purchaseContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#60000000"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:tint="@color/colorDestakTextSecundary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:lines="1"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                    android:text="@string/label_nav_purchase"
                    android:textColor="@color/colorDestakTextSecundary"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/settingsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#70000000"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:tint="@color/colorDestakTextSecundary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:lines="1"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                    android:text="@string/label_nav_settings"
                    android:textColor="@color/colorDestakTextSecundary"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/institutionalContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#80000000"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:tint="@color/colorDestakTextSecundary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:lines="1"
                    android:textAppearance="@style/Theme.Organize.TextAppearance.GothamRounded.Book"
                    android:text="@string/label_nav_institutional"
                    android:textColor="@color/colorDestakTextSecundary"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
